@model EmployeeModel
@{
    ViewData["Title"] = "Editar Empleado";
}

<h1>Editar Empleado</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">Nombre</label>
                    <input asp-for="FirstName" type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">Apellidos</label>
                    <input asp-for="LastName" type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label">Telefono</label>
                    <input asp-for="Phone" type="text" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Editar</button>
            </form>

        </div>
    </div>
</div>