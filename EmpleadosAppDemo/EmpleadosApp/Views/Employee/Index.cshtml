@model IEnumerable<EmployeeModel>
@{
    ViewData["Title"] = "Listado de Empleados";
}

<h1>Listado de Empleados</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <div class="mt-3 mb-3">
                <a asp-action="Create" asp-controller="Employee" class="btn btn-success">
                    Nuevo Empleado
                </a>
            </div>

            <table class="table table-bordered table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Telefono</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(item => employee.Id)</td>
                            <td>@Html.DisplayFor(item => employee.FirstName)</td>
                            <td>@Html.DisplayFor(item => employee.LastName)</td>
                            <td>@Html.DisplayFor(item => employee.Phone)</td>
                            <td>
                                <a 
                                asp-controller="Employee" 
                                asp-action="Edit" 
                                asp-route-id="@employee.Id"
                                class="btn btn-primary">
                                    Editar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>